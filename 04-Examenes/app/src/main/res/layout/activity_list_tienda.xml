<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_layout_tiendas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListTienda">

    <ListView
        android:id="@+id/lv_list_tiendas"
        android:layout_width="299dp"
        android:layout_height="479dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.722" />

    <Button
        android:id="@+id/btn_anadir_tienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="Crear"
        app:layout_constraintBottom_toTopOf="@+id/lv_list_tiendas"
        app:layout_constraintEnd_toEndOf="@+id/lv_list_tiendas"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/lv_list_tiendas" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="95dp"
        android:layout_height="39dp"
        android:layout_marginBottom="80dp"
        android:text="Tiendas"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lv_list_tiendas"
        app:layout_constraintEnd_toEndOf="@+id/lv_list_tiendas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lv_list_tiendas" />
</androidx.constraintlayout.widget.ConstraintLayout>