<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioTienda">

    <EditText
        android:id="@+id/input_id_tienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="Ingresa ID"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_nombre_tienda"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_tienda"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_tienda" />

    <EditText
        android:id="@+id/input_nombre_tienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="Ingresa Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_direccion_tienda"
        app:layout_constraintEnd_toEndOf="@+id/input_direccion_tienda"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_direccion_tienda" />

    <EditText
        android:id="@+id/input_direccion_tienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="Ingresa DirecciÃ³n"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_crear_tienda"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_tienda"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_tienda" />

    <Button
        android:id="@+id/btn_crear_tienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.789" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="NUEVA TIENDA"
        app:layout_constraintBottom_toTopOf="@+id/input_id_tienda"
        app:layout_constraintEnd_toEndOf="@+id/input_id_tienda"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/input_id_tienda" />
</androidx.constraintlayout.widget.ConstraintLayout>