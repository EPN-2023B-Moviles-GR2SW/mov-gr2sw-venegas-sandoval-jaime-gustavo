<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearProducto">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="NUEVO PRODUCTO"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/input_id_producto"
        app:layout_constraintEnd_toEndOf="@+id/input_id_producto"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/input_id_producto" />

    <Button
        android:id="@+id/btn_anadir_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.778" />

    <EditText
        android:id="@+id/input_id_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="Ingresa ID"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_nombre_producto"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_producto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_producto" />

    <EditText
        android:id="@+id/input_nombre_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:hint="Ingresa Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/input_precio_producto"
        app:layout_constraintEnd_toEndOf="@+id/input_precio_producto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_precio_producto" />

    <EditText
        android:id="@+id/input_precio_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="Ingresa Precio"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_anadir_producto"
        app:layout_constraintEnd_toEndOf="@+id/btn_anadir_producto"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/btn_anadir_producto" />
</androidx.constraintlayout.widget.ConstraintLayout>